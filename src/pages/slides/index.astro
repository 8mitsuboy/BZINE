---
import BaseLayout from "../../layouts/BaseLayout.astro";

interface SlideEntry {
  url: string;
  frontmatter: {
    title: string;
    postUrl?: string;
  };
}

const allSlides = Object.values(
  import.meta.glob<SlideEntry>("./*.md", { eager: true }),
);

const pageTitle = "スライド";
---

<BaseLayout pageTitle={pageTitle}>
  <p class="text-bzine-light-text-muted dark:text-bzine-text-muted mb-8">
    プレゼンテーション用のスライド一覧です。
  </p>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      allSlides.map((slide) => (
        <a
          href={slide.url}
          class="group block rounded-xl overflow-hidden no-underline hover:-translate-y-1 transition-all duration-300 shadow-card hover:shadow-card-hover"
        >
          <div class="aspect-video bg-[#17171c] relative flex items-center justify-center p-8 rounded-xl border border-[#c4ad6c]/10 group-hover:border-[#c4ad6c]/30 transition-colors overflow-hidden">
            <!-- 装飾ライン -->
            <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-[#c4ad6c] to-transparent opacity-30 group-hover:opacity-80 transition-opacity" />
            <!-- タイトル -->
            <h3 class="font-heading font-bold text-lg text-[#dcdce2] group-hover:text-[#c4ad6c] transition-colors text-center leading-relaxed">
              {slide.frontmatter.title}
            </h3>
          </div>
        </a>
      ))
    }
  </div>
</BaseLayout>
